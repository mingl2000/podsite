{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Episode",
  "type": "object",
  "required": ["id","slug","title","description","publish_date","duration","image","audio","notes"],
  "properties": {
    "id": { "type": "string" },
    "slug": { "type": "string" },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "publish_date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "duration": { "type": "integer", "minimum": 0 },
    "image": { "type": "string" },
    "audio": { "type": "string" },
    "notes": { "type": "string" }
  }
}
